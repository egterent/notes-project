<li id="note-<%= note.id %>">
  <span class="note"><%= link_to note.title, note %></span>
  <span class="body"><%= raw Rinku.auto_link(note.body, mode = :all, link_attr = nil, skip_tags = nil) %></span>
  <span class="timestamp">
    | <%= time_ago_in_words(note.created_at) %> ago.
  </span>                         
</li>
