<% provide(:title, 'Notes') %>

<h3>ALL NOTES [<%= current_user.categories.count %>|<%= current_user.notes.count %>]</h3>

<% @notes.each do |note| %>

<div class="alert alert-secondary">
  <h4><%= note.title %></h4>
  <p><%= note.body %></p>
  <%= link_to 'Read More', note_path(note), class: "btn btn-outline-info" %>
</div>

<% end %>
