<% provide(:title, 'Categories') %>
<h3>ALL CATEGORIES [<%= current_user.categories.count %>|<%= current_user.notes.count %>]</h3>
<% if @categories.any? %>
  <ol class="categories">
    <%= render @categories%>
  </ol>
  <%= will_paginate @categories %>
<% end %>
<%= link_to "Add category", categories_new_path, class: "btn btn-lg btn-primary" %>
